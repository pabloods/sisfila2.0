<h1>FILAS</h1>
<br>

<table class="formatacaotabela col4">
  <thead class="fformatacaotabela col4">
    <tr class="formatacaotabela col4">
      <th class="formatacaotabela col4">Codigo</th>
      <th class="formatacaotabela col4">Nome</th>
      <th class="formatacaotabela col4">Prioridade</th>
      <th class="formatacaotabela col4">Ativo</th>
      <th class="formatacaotabela col4" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filas.each do |fila| %>
      <tr>
        <td class="formatacaotabela col4"><%= fila.codigo %></td>
        <td class="formatacaotabela col4"><%= fila.nome %></td>
        <td class="formatacaotabela col4"><%= fila.prioridade %></td>
        <td class="formatacaotabela col4"><%= fila.ativo %></td>
        <td class="formatacaotabela col4"><%= link_to 'Mostrar', fila, class: 'buttonmenor azulclaro'  %></td>
        <td class="formatacaotabela col4"><%= link_to 'Editar', edit_fila_path(fila), class: 'buttonmenor amareloclaro'  %></td>
        <td class="formatacaotabela col4"><%= link_to 'Apagar', fila, method: :delete, data: { confirm: 'Deseja mesmo apagar?' }, class: 'buttonmenor red'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

