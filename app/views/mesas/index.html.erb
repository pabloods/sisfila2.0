<p id="notice"><%= notice %></p>

<h1>Mesas</h1>

<p>
  Mesa escolhida: <b><%= @mesa_atual.nome if @mesa_atual %></b>
  <% if @mesa_atual %>
    <%= link_to 'Remover seleção', mesa_remover_selecao_path, method: :post %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Aluno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mesas.each do |mesa| %>
      <tr>
        <td><%= mesa.nome %></td>
        <td><%= mesa.ativo %></td>
        <td><%= mesa.vaga.aluno if mesa.vaga %></td>
        <td><%= link_to 'Escolher', mesa_escolher_path(mesa), method: :post %></td>
        <td><%= link_to 'Show', mesa %></td>
        <td><%= link_to 'Edit', edit_mesa_path(mesa) %></td>
        <td><%= link_to 'Destroy', mesa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mesa', new_mesa_path %>
